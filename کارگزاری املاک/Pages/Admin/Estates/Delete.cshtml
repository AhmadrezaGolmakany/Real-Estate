@page
@model کارگزاری_املاک.Pages.Admin.Estates.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row mt-5">
    <div class="col-lg-3 col-md-3 col-12">
        <div class="text-right">
            <div class="list-group p-0 mb-5">
                <a href="#" class="active list-group-item list-group-item-action">
                    مدیریت املاک
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-9 col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center font-weight-bold m-auto"> حذف ملک </h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <label class="h6 my-2"> نام </label>
                            <input asp-for="EstateModel.Estate.Title" type="text" class="form-control" disabled="">
                            <label class="h6 my-2"> متراژ </label>
                            <input asp-for="EstateModel.Estate.Metrage" type="text" class="form-control" disabled="">
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <img src="~/image/Estates/@Model.EstateModel.Estate.Image" width="200px" height="200px" class="my-2 mx-auto d-block">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <button class="btn btn-danger btn-block mr-1 my-3" type="submit"> حذف </button>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <a href="#" class="btn btn-secondary btn-block my-3"> بازگشت </a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>