@page
@model کارگزاری_املاک.Pages.EstatesDetails
@{
}
<div class="shadow mt-5 p-3">
    <div class="row">
        <div class="col-lg-5 col-12">
            <img src="/image/Estates/@Model.EstatesVM.Estate.Image" class="rounded shadow Estate-image" width="100%" height="400" alt="">
        </div>
        <div class="col-lg-3 col-12">
            <h6 class="mt-3"> @Model.EstatesVM.Estate.Title </h6>

            <h6 class="mt-3"> متراژ :  </h6> <p> @Model.EstatesVM.Estate.Metrage متر </p>

            <h6 class="mt-3"> دسته بندی :  </h6> <p> @Model.EstatesVM.Estate.CategoryModel.Title </p>

            <h6 class="mt-3"> قیمت :  </h6> <p> @Model.EstatesVM.Estate.Price.ToString("#,0") </p>

            <h6 class="mt-3"> آدرس :  </h6> <p> @Model.EstatesVM.Estate.Address  </p>

            <form method="post">
                <button class="btn btn-info" type="submit"> افزودن به علاقه مندی ها <i class="fas fa-heart text-danger"></i> </button>
            </form>

        </div>
        <div class="col-lg-4 col-12 Estate-description">
            <h6> توضیحات : </h6>
            <p>
                @Model.EstatesVM.Estate.Description
            </p>
        </div>
    </div>
</div>

<div class="title">
    <h2> محصولات مرتبط  </h2>
</div>
@if (Model.EstatesVM.suggestedproducts.Any())
{
    <div class="products row">

        @foreach (var estates in Model.EstatesVM.suggestedproducts)
        {
            <div class="col-lg-4 col-md-6 col-12">
                <a asp-page="EstatesDetails" asp-route-Id="@estates.Id">
                    
                    <div class="product-card">
                        <div class="image">
                            <img src="~/image/Estates/@estates.Image" alt="product1">
                        </div>
                        <div class="card-body">
                            <p class="d-flex justify-content-between">
                                <span > @estates.Title </span>
                                <span> @estates.Metrage متری </span>
                            </p>
                            <p class="mt-2 address">
                                <i class="fas fa-map-marked-alt text-orange"></i>
                                @estates.Address
                            </p>
                            <p class="my-2"> مبلغ : @estates.Price.ToString("#,0") تومان </p>
                        </div>


                    </div>
                    

                </a>
            </div>
        }

    </div>
}
